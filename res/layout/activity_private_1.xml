<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_floating_material_light"
    android:orientation="vertical"
    tools:context="com.gama.quatenation.PrivateActivity" >

    <TextView
        android:id="@+id/QuoteContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EA80FC"
        android:onClick="Quote"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:text="&quot;One ring to rule them all,...&quot;"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/quote_book_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/QuoteContent"
        android:background="#EA80FC"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="-Lord of the Rings : The Fellowship of the Ring, 20. JRR Tolkein."
        android:textSize="10dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/accent_material_light"
        android:enabled="true"
        android:focusable="true"
        android:onClick="Private"
        android:text="Private" />

</RelativeLayout>