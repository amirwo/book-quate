<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.gama.quatenation"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/mainRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/llFeedView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:horizontalSpacing="8dp"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@color/secondary_color"
            android:verticalSpacing="8dp" >
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/croppingRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:visibility="gone" >

            <!-- custom:backgroundColor="@color/background_material_dark" -->

            <com.gama.quatenation.utils.ui.CropImageView
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cropImageView"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:padding="0dp"
                app:initialFrameScale="1"
                custom:cropMode="ratio_free"
                custom:frameColor="@android:color/holo_green_light"
                custom:frameStrokeWeight="3dp"
                custom:guideColor="#BBFFFFFF"
                custom:guideShowMode="show_on_touch"
                custom:guideStrokeWeight="1dp"
                custom:handleColor="@android:color/holo_green_light"
                custom:handleShowMode="show_always"
                custom:handleSize="10dp"
                custom:touchPadding="8dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/quotePreviewLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:visibility="gone" >

            <TableLayout
                android:id="@+id/tableLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:padding="10dip"
                android:stretchColumns="1,2"
                android:visibility="visible" >

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/author_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Author:"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <AutoCompleteTextView
                        android:id="@+id/author_auto_complete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="true"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:visibility="visible" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="35dip" >

                    <TextView
                        android:id="@+id/title_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Title:"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <AutoCompleteTextView
                        android:id="@+id/title_auto_complete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="true"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:visibility="visible" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="35dip" >

                    <TextView
                        android:id="@+id/page_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Page:"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <EditText
                        android:id="@+id/page_edit_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="true"
                        android:inputType="number" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="35dip" >

                    <Button
                        android:id="@+id/submit_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Submit" />

                    <Button
                        android:id="@+id/cancel_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="true"
                        android:text="Cancel" />
                </TableRow>
            </TableLayout>

            <EditText
                android:id="@+id/quote_content_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/tableLayout1"
                android:text="" >
            </EditText>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/searchQuoteLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:background="@color/secondary_color"
            android:visibility="gone" >

            <TableLayout
                android:id="@+id/tableLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:padding="10dip"
                android:stretchColumns="1,2"
                android:visibility="visible" >

                <TableRow
                    android:id="@+id/tableRow7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/search_author_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Author:"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <AutoCompleteTextView
                        android:id="@+id/author_search_complete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="true"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:visibility="visible" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="35dip" >

                    <TextView
                        android:id="@+id/search_title_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Title:"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <AutoCompleteTextView
                        android:id="@+id/title_search_complete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="true"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:visibility="visible" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="35dip" >

                    <Button
                        android:id="@+id/search_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Find quotes" />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:id="@+id/llSearchhView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tableLayout2"
                android:background="@color/secondary_color"
                android:gravity="center"
                android:horizontalSpacing="8dp"
                android:orientation="vertical"
                android:padding="8dp"
                android:verticalSpacing="8dp"
                android:visibility="gone" >
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>